h1,h2,h3,h4,h5{
	color: #db519f;
	line-height: 1.4;
	border-bottom: none;
}
h1{
	font-size: 48px;
	margin-bottom: 40px
}
h2{
	font-size: 36px
}
h3{
	font-size: 30px
}
.ctaBtn, a:hover.ctaBtn{
	background: #db519f;
	color: white;
	padding:15px 30px;
	text-decoration: none
}
.spacer{
	margin-bottom: 40px;
	display:block;
}
#page{
	margin-bottom: 40px
}
/*Our Boxes Collection page*/
.stepsCount{
	margin: 40px 0;
}
.step{
	background: #fff url('arrow-off.gif') right top no-repeat;
	margin-right: 20px;
	padding: 7px 40px 1px 10px;
}
.step.on{
	background: #f8c8e2 url('arrow-on.gif') right top no-repeat;
}
.step:last-child{
	background: none;
}
.step span{
	display: inline-block;
}
.step .oneStep{
	background: url('step1-off.gif');
	background-repeat: no-repeat;
	width: 175px;
	height: 48px;
}
.step.on .oneStep{
	background: url('step1-on.gif');
	background-repeat: no-repeat;
}
.step .twoStep{
	background: url('step2-off.gif');
	background-repeat: no-repeat;
	width: 139px;
	height: 49px;
}
.step.on .twoStep{
	background: url('step2-on.gif');
	background-repeat: no-repeat;
}
.step .threeStep{
	background: url('step3-off.gif');
	background-repeat: no-repeat;
	width: 194px;
	height: 49px
}
.step.on .threeStep{
	background: url('step3-on.gif');
	background-repeat: no-repeat;
}

